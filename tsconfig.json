{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "baseUrl": "src",
        "outDir": "dist",
        "sourceMap": true,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "strict": false
    },
    "include": ["src/**/*"],
}